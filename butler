#! /usr/bin/env sh
#
# Butler
#
# A task runner to simplify development
# Let the Butler do it.

if [[ "$OSTYPE" == *darwin* ]]; then
  READLINK_CMD='greadlink'
else
  READLINK_CMD='readlink'
fi

dot="$(cd "$(dirname "$([ -L "$0" ] && $READLINK_CMD -f "$0" || echo "$0")")"; pwd)"

if [[ "$1" == "--init" ]]; then
  echo "$dot/init.sh"
  exit 1
fi

source "$dot/butler-base.sh"

butler_exec "$@"
